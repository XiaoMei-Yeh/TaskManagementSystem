<% if task.errors.any? %>
  <ul>
    <% task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(task) do |f|  %>
  <div class="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="content">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div class="submit">
    <%= f.submit 'okay' %>
  </div>
<% end %>